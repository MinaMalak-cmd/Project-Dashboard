@using Project_Dashboard.Models
@{
    ViewBag.Title = "Add New Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <i class="fas fa-table mr-1"></i>
    Add New Employee
</div>
<div class="card-body">
    <div class="container">
        <form method="post">
            <input type="hidden" name="empId" value="9" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name"  placeholder="Employee Name">
            </div>
            <div class="form-group">
                <label for="location">Address</label>
                <input type="text" class="form-control"  name="address" placeholder="Employee Address">
            </div>
            <div class="form-group">
                <label for="desc">Salary</label>
                <input type="text" class="form-control"name="salary" placeholder="Employee Salary">
            </div>
            <div class="form-group">
                <label for="desc">HireDate</label>
                <input type="date" class="form-control"name="hiredate" placeholder="Employee HireDate">
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="deptId">Choose Department</label>
                    <select name="deptId" class="form-control">
                        <option selected value="0">Choose...</option>
                        @foreach (var item in (List<Department>)ViewBag.depts)
                        {
                            <option value="@item.deptId">@item.name</option>
                        }
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-50 m-auto">Add Project</button>
        </form>
    </div>
</div>
