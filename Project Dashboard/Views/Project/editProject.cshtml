@model Project_Dashboard.Models.Project
@using Project_Dashboard.Models
@{
    ViewBag.Title = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-header">
    <i class="fas fa-table mr-1"></i>
   Edit Project
</div>
<div class="card-body">
    <div class="container">
        <form method="post">
            <input type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" value="@Model.name" placeholder="Project Name">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" value="@Model.location" name="location" placeholder="Project Location">
            </div>
            <div class="form-group">
                <label for="desc">Description</label>
                <input type="text" class="form-control" value="@Model.description" name="description" placeholder="Description">
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="deptId">Choose Department</label>
                    <select name="deptId" class="form-control">
                        @foreach (var item in (List<Department>)ViewBag.depts)
                        {
                            if (item.deptId == Model.deptId)
                            {
                                <option selected value="@item.deptId">@item.name</option>
                            }

                            else
                            {
                                <option value="@item.deptId">@item.name</option>
                            }

                        }
                    </select>
                </div>

            </div>
            <button type="submit" class="btn btn-primary w-50 m-auto">Save Changes</button>
        </form>
    </div>
</div>